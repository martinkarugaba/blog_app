<section class='flex flex-col w-[500px] mb-[5rem] justify-start items-center'>
  <section class='w-[500px] border-black'>
    <h1 class='font-medium text-4xl font-medium mb-4'>Posts by <%= @user.name %></h1>
    <div class='border cursor-pointer px-6 border-black h-[100px] flex items-center justify-start w-full gap-4'>
      <div class='h-[60px] w-[60px] rounded-full border '>
        <% if @user.photo.present? %>
          <img src="<%= @user.photo %>" class='w-full h-full object-cover' alt="Photo">
        <% end %>
      </div>
      <div>
        <a href="<%= user_path(@user) %>">
          <p><%= @user.name %></p>
        </a>
      </div>
    </div>

    <button class='p-2 rounded-md border font-medium border-black mt-4'>
      <%= link_to 'Create New Post', new_user_post_path(@user), class: 'btn' %>
    </button>
    
    <ul class='w-full mt-8 flex flex-col justify-start w-full items-start gap-4'>
      <% @posts.each_with_index do |post, index| %>
        <div class="post border border-black">
          <h3><%= post.title %></h3>
          <p><%= post.text %></p>
          <div class='mt-4 flex justify-end items-center gap-4 text-sm'>
            <p>Number of Comments: <%= post.comments.count %></p>
            <p>Number of Likes: <%= post.likes.count %></p>
          </div>
          <ul class='border-2'>
            <% post.recent_comments.each do |comment| %>
              <li><%= comment.text %></li>
            <% end %>
          </ul>
          <a class='font-medium' href="<%= user_post_path(@user, post) %>">Read more</a>
        </div>
      <% end %>
    </ul>
    
    <button class='mt-8 mr-4 p-2 rounded-md bg-blue-500 text-white font-medium border-2'>
      <span><%= link_to 'Next', user_posts_path(page: (@page.to_i + 1)), class: 'btn' %></span>
    </button>
  
    <% if @page.to_i > 0 %>
      <button class='mt-4 ml-4 p-2 font-medium bg-blue-500 text-white rounded-md border'>
        <%= link_to 'Prev', user_posts_path(page: (@page.to_i - 1)), class: 'btn' %>
      </button>
    <% end %>
    
    <div class='mt-4 font-semibold'>
      <%= link_to 'Back to Profile', user_path(@user), class: 'btn' %>
    </div>
  </section>
</section>

